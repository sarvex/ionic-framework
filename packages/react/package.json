{
  "name": "@ionic/react",
  "version": "7.0.8",
  "description": "React specific wrapper for @ionic/core",
  "keywords": [
    "ionic",
    "framework",
    "react",
    "mobile",
    "app",
    "hybrid",
    "webapp",
    "cordova",
    "progressive web app",
    "pwa"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/ionic-framework.git"
  },
  "scripts": {
    "build": "npm run clean && npm run copy && npm run compile",
    "clean": "rimraf dist && rimraf dist-transpiled && rimraf routing",
    "compile": "npm run tsc && rollup -c",
    "eslint": "eslint src",
    "prettier": "prettier \"./src/**/*.{html,ts,tsx,js,jsx}\"",
    "release": "np --any-branch --yolo --no-release-draft",
    "lint": "npm run eslint && npm run prettier -- --write --cache",
    "lint.fix": "npm run eslint -- --fix && npm run prettier -- --write --cache",
    "tsc": "tsc -p .",
    "copy": "node scripts/copy.js",
    "test.spec": "jest --ci",
    "test.treeshake": "node scripts/treeshaking.js dist/index.esm.js",
    "sync": "sh ./scripts/sync.sh"
  },
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "css/"
  ],
  "dependencies": {
    "@ionic/core": "^7.0.8",
    "ionicons": "^7.0.0",
    "tslib": "*"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  },
  "devDependencies": {
    "@ionic/eslint-config": "0.3.0",
    "@ionic/prettier-config": "2.1.2",
    "@rollup/plugin-node-resolve": "8.4.0",
    "@rollup/plugin-virtual": "2.1.0",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "11.2.7",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "26.0.24",
    "@types/node": "14.18.56",
    "@types/react": "16.14.46",
    "@types/react-dom": "16.9.19",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "7.32.0",
    "fs-extra": "9.1.0",
    "jest": "29.7.0",
    "np": "10.0.5",
    "prettier": "2.8.8",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "ts-jest": "29.1.5",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "cypress",
      "node_modules",
      "dist-transpiled",
      "dist",
      "test/base/*",
      "test/apps/*",
      "test/build/*"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "prettier": "@ionic/prettier-config"
}
